@inject IDialogService DialogService

<style>
    .image-lightbox {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: transparent;
    }

    .image-lightbox img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
    }

    .noshadow {
        box-shadow: none;
    }
</style>

<MudDialog Style="background-color: rgba(255, 255, 255, 0);">
    <DialogContent>
        <MudCarousel @ref="@carousel" Style=
            "height: 70vh;
            background-color: white;
            background-image: linear-gradient(
                to right,
                rgba(0, 0, 0, 0.1) 2px,
                rgba(255, 255, 255, 1) 2px
            );
            background-size: 20px 100%;" 
            TData="object"
            AutoCycle="false">

            @foreach (var img in Images)
            {
                <MudCarouselItem Class="image-lightbox">
                    <div class="image-lightbox">
                        <img src="@AccountPage.GetImageSrc(img)" />
                    </div>
                </MudCarouselItem>
            }
        </MudCarousel>
    </DialogContent>

    <DialogActions>
        <MudButton Class="mr-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Закрыть</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public List<byte[]> Images { get; set; } = default!;
    [Parameter] public int StartIndex { get; set; } = 0;

    MudCarousel<object> carousel = default!;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            carousel.MoveTo(StartIndex);
            StateHasChanged();
        }
    }

    void Close() => MudDialog.Cancel();
}
