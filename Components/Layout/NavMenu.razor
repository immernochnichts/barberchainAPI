@inherits MainLayout
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<MudAppBar Elevation="1">
        <a href="/">
            <MudText Typo="Typo.h5" Class="ml-3">Barberchain</MudText>
        </a>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                @User.Identity.Name
            </Authorized>
        </AuthorizeView>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        @if (NotificationCount > 0)
        {
            <MudBadge Content="@NotificationCount" Color="Color.Secondary" Overlap="true" Class="mx-6 my-4">
                <MudIconButton @onclick="AccessProfile" Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.End" />
        </MudBadge>
        }
        else
        {
            <MudIconButton @onclick="AccessProfile" Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.End" />
        }
</MudAppBar>

@code
{
    [Parameter]
    public int NotificationCount { get; set; }
}